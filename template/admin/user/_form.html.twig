{% use "admin/base.html.twig" %}
<form action="" method="post">
    <div class="form-group my-3">
        <label for="title">FirstName</label>
        <input value="{{ user.fname }}" type="text" class="form-control" name="fname" id="fname" placeholder="Please enter fisrtname" required>
    </div>
    <div class="form-group my-3">
        <label for="title">LastName</label>
        <input value="{{ user.lname }}" type="text" class="form-control" name="lname" id="lname" placeholder="Please enter lastname" required>
    </div>
    <div class="form-group my-3">
        <label for="title">Pseudonyme</label>
        <input value="{{ user.pseudo }}" type="text" class="form-control" name="pseudo" id="pseudo" placeholder="Please enter pseudo" required>
    </div>
    <div class="form-group my-3">
        <label for="title">Role</label>
        <select name="roles" id="roles" class="form-select">
            <option value="ROLE_ADMIN">Admin</option>
            <option value="ROLE_USER">Utilisateur</option>
        </select>
    </div>
    <div class="d-grid gap-2 mt-3">
        <input type="hidden" name="submitted" value="1" />
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>