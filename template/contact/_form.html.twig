{% use "base.html.twig" %}

<form action="" method="post">
    <div class="form-group my-3">
        <label for="name">Nom</label>
        <input value="" type="text" class="form-control" name="name" id="name" placeholder="Entrer un nom" required>
    </div>
    <div class="form-group my-3">
        <label for="fname">Prénom</label>
        <input value="" type="text" class="form-control" name="fname" id="fname" placeholder="Entrer un prénom" required>
    </div>
    <div class="form-group my-3">
        <label for="email">Email</label>
        <input value="" type="email" class="form-control" name="email" id="email" placeholder="Entrer un prénom" required>
    </div>
    <div class="form-group my-3">
        <label for="content">Message</label>
        <textarea name="content" id="editor"></textarea>
    </div>
    <div class="d-grid gap-2 mt-3">
        <button type="submit" class="btn btn-primary">Envoyer</button>
    </div>
</form>
